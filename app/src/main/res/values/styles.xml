<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"> </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"> </style>

        <style name="icon">
            <item name="android:layout_width">@dimen/size_small_24</item>
            <item name="android:layout_height">@dimen/size_small_24</item>
        </style>
        <style name="icon.left" parent="icon">
            <item name="android:layout_gravity">top|left</item>
            <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
            <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
         </style>>
        <style name="icon.right" parent="icon">
            <item name="android:layout_gravity">top|right</item>
            <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
            <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        </style>
    <style name="header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="headTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>>
    <style name="verticalLine">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:background">@color/gray_light</item>
    </style>
    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>
    <style name="login_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    
    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
